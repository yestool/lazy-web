{% extends "layout/admin-layout.html.twig" %}
{% block title %}Admin Index
{% endblock %}
{% block content %}
<!-- 仪表盘内容 -->
<div class="row g-3 mb-4">
    <div class="col-md-3">
        <div class="card">
        <div class="card-body">
            <h6 class="card-title text-muted">总用户数</h6>
            <h3 class="card-text">1,234</h3>
            <div class="text-success small">
            <i class="bi bi-arrow-up"></i> 12% 较上月
            </div>
        </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
        <div class="card-body">
            <h6 class="card-title text-muted">总订单数</h6>
            <h3 class="card-text">856</h3>
            <div class="text-success small">
            <i class="bi bi-arrow-up"></i> 8% 较上月
            </div>
        </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
        <div class="card-body">
            <h6 class="card-title text-muted">总收入</h6>
            <h3 class="card-text">¥45,678</h3>
            <div class="text-danger small">
            <i class="bi bi-arrow-down"></i> 3% 较上月
            </div>
        </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card">
        <div class="card-body">
            <h6 class="card-title text-muted">活跃用户</h6>
            <h3 class="card-text">567</h3>
            <div class="text-success small">
            <i class="bi bi-arrow-up"></i> 15% 较上月
            </div>
        </div>
        </div>
    </div>
    </div>

    <!-- 图表区域 -->
    <div class="row g-3">
    <div class="col-md-8">
        <div class="card">
        <div class="card-body">
            <h5 class="card-title">销售趋势</h5>
            <canvas id="salesChart"></canvas>
        </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="card">
        <div class="card-body">
            <h5 class="card-title">用户分布</h5>
            <canvas id="userChart"></canvas>
        </div>
        </div>
    </div>
</div>
{% endblock %}
